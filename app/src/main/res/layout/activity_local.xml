<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.Proj.Maquilan.ustnews.Local"
    android:background="@drawable/bgp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Engineering"
        android:textSize="50sp"
        android:textAlignment="center"
        android:id="@+id/title_txt"
        android:layout_above="@+id/LocN_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/tableRow"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/title_txt"
        android:background="@drawable/engi"></TableRow>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="News"
        android:id="@+id/LocN_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="78dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Events"
        android:id="@+id/LocE_btn"
        android:layout_alignTop="@+id/LocN_btn"
        android:layout_toRightOf="@+id/LocN_btn" />

</RelativeLayout>
